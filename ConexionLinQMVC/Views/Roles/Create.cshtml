@{
    ViewBag.Title = "CREAR ROL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>CREAR ROL</h3>
@Html.ActionLink("Regresar a la lista", "Index") | @Html.ActionLink("Administracion de Roles Y Usuarios", "ManageUserRoles")
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container"style="margin-top:60px">
        <div class="form-group">   
            
            <div  class="col-md-10">
                Nombre Del Rol 
                @Html.TextBox("RoleName",null, htmlAttributes: new { @class = "form-control" })
            </div>   
        </div> 
        <div class="form-group" style="margin-top:55px">
            <div class="col-md-10">
                <input type="submit" style="margin-top:15px" class="btn btn-default" value="Guardar Rol" />
            </div>
        </div>        
     </div>
 }


