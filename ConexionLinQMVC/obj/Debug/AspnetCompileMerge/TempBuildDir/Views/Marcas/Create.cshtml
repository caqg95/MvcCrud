                @Html.EditorFor(model => model.H_Ent1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.H_Ent1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.H_Sal1, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                Fecha y Hora De Inicio De Almuerzo
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.H_Sal1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.H_Sal1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.H_Ent2, htmlAttributes: new { @class = "control-label col-md-2" })*@
