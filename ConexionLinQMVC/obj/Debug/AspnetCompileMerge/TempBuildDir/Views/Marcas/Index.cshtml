@model IEnumerable<ConexionLinQMVC.Data.tblRegistroMarcas>
@{
    ViewBag.Title = "MARCAS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
  <h1><small>Consultas de Marcas</small></h1>
</div>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // prepare the data
            var source =
             {
                 dataType: "json",
                 dataFields: [
                      { name: 'IdEmpleados',type:'number' },
                      { name: 'Nombres',type:'string' },
                      { name: 'H_Ent1' ,type:'date'},
                      { name: 'H_Sal2' ,type:'date'}
                 ],
                 url: 'Marcas/GetMarcas'
             };
            //agregar el nombre del empleado
            var dataAdapter = new $.jqx.dataAdapter(source);
            // create Tree Grid
            $("#dataTable").jqxDataTable(
           {
               
               width: 920,
               height:400,
               source: dataAdapter,
               theme: 'Boostrap',
               pageSize: 50,
               sortable: true,
               filterable: true,
               pageable: true,
               columns:
              [
                   { text: 'Cod Empleado', dataField: 'IdEmpleados', width:100 },
                   { text: 'Nombre', dataField: 'Nombres', width: 500},
                   { text: 'Hora Entrada', dataField: 'H_Ent1',cellsFormat:'dd-MM-yyyy HH:mm:ss', width:150},
                   { text: 'Hora Salida', dataField: 'H_Sal2', cellsFormat:'dd-MM-yyyy HH:mm:ss', width: 150 }
              ]
           });
        });
    </script>
}
<ol class="breadcrumb" >
    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Catálogos
            <b class="caret"></b>
        </a>
        <ul role="menu" class="dropdown-menu">
            <li>@Html.ActionLink("Empleados", "Index", "Empleados")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("Departamentos", "Index", "Departamento")</li>
        </ul>
    </li>
    <li class="active">Registro De Marcacion</li>
</ol>
<p>
    <a class="btn btn-default" href="@Url.Action("Create","Marcas")">Registrar Marcada</a>
</p>
<div class="table-responsive" style="margin-top:60px">
    <div id="dataTable" style="margin-left:130px">
    </div>
</div>
