@model IEnumerable<ConexionLinQMVC.Data.tblEmpleados>
@{
    ViewBag.Title = "EMPLEADO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1><small>Listado De Empleados</small></h1>
</div>
<ol class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Catálogos
            <b class="caret"></b>
        </a>
        <ul role="menu" class="dropdown-menu">
            <li>@Html.ActionLink("EMPLEADOS", "Index", "Empleados")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("DEPARTAMENTOS", "Index", "Departamento")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("TURNOS", "Index", "Turnos")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("JUSTIFICACION PERSONAL", "Index", "JustificacionPersonals")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("TIPO DE JUSTIFICACION", "Index", "TipoJustificacions")</li>
        </ul>
    </li>
    <li class="active">Listado De empleados</li>
</ol>
<p>
    <a class="btn btn-default" href="@Url.Action("Create","Empleados")">Registrar Empleado</a>
</p>

<div class="table-responsive" style="margin-top:60px">
    <table id="grid" class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Carnet</th>
                <th>Empleado</th>
                <th>Salario</th>
                <th>Departamento</th>
                <th>Descanso Día</th>
                <th>Turno</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.IdDepartamento.ToString(), "Edit", new { id = item.IdEmpleados })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <th>
                        @Html.DisplayFor(model => item.Salario)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblDepartamento.Departamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaLibre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblTurnos.Turno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
